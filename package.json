{
  "name": "name-gen-web-client",
  "version": "0.1.0",
  "description": "Name generator web client",
  "main": "index.js",
  "scripts": {
    "start": "./bin/start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:styles": "suitcss ./src/styles.css --verbose > ./public/styles.css",
    "make:styles":"suitcss ./src/styles.css -c > ./public/styles.css",
    "build:scripts": "browserify ./src/main.jsx -t babelify -t flowcheck --debug > ./public/main.js",
    "make:scripts": "browserify ./src/main.jsx -t babelify | uglifyjs > ./public/main.js",
    "make:polyfill": "browserify ./src/polyfill.js | uglifyjs > ./public/polyfill.js",
    "make:assets": "cp -r ./src/assets ./public/assets",
    "clean": "rm -rf ./public/**",
    "build": "npm run clean && npm run make:assets && npm run make:polyfill && npm run build:scripts && npm run build:styles",
    "make": "npm run clean && npm run make:assets && npm run make:polyfill && npm run make:scripts && npm run make:styles"
  },
  "config": {
    "port": 14320,
    "dbpath": ".name-gen",
    "dbname": "names.lev"
  },
  "author": "Matt Styles",
  "repository": "git://github.com/mattstyles/name-gen-web-client.git",
  "license": "WTFPL",
  "dependencies": {
    "babel": "^5.0.10",
    "co-body": "^1.0.0",
    "co-views": "^0.3.0",
    "eventemitter3": "^0.1.6",
    "flux": "^2.0.1",
    "hogan.js": "^3.0.2",
    "koa": "^0.17.0",
    "koa-logger": "^1.2.2",
    "koa-mount": "^1.3.0",
    "koa-route": "^2.4.0",
    "koa-static": "^1.4.9",
    "react": "^0.13.1"
  },
  "devDependencies": {
    "babelify": "^6.0.2",
    "browserify": "^9.0.7",
    "flowcheck": "^0.2.3",
    "suitcss-preprocessor": "^0.4.0",
    "uglifyjs": "^2.4.10"
  }
}
